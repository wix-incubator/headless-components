---
import LoginForm from './login.astro';
---

<html lang="he" dir="rtl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>התחברות | אתר ההדגמה</title>
    <!-- Use Tailwind CSS from unpkg CDN instead -->
    <script src="https://unpkg.com/tailwindcss@3.3.5/lib/index.min.js"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              // Add any custom colors you need here
            }
          }
        }
      }
    </script>
  </head>
  <body class="bg-blue-50 min-h-screen">
    <div class="max-w-md mx-auto pt-10 pb-16">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-blue-800">אתר ההדגמה</h1>
        <p class="text-gray-600 mt-2">ברוכים הבאים למערכת</p>
      </div>
      
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <LoginForm class="login-form-hebrew">
          <!-- Title texts -->
          <span slot="title-login" class="text-xl font-bold text-blue-900">התחברות</span>
          <span slot="title-signup" class="text-xl font-bold text-blue-900">הרשמה</span>
          <span slot="title-reset" class="text-xl font-bold text-blue-900">איפוס סיסמה</span>
          <span slot="title-verify" class="text-xl font-bold text-blue-900">אימות דוא"ל</span>
          <span slot="title-success" class="text-xl font-bold text-blue-900">הצלחה</span>
          
          <!-- Form labels -->
          <span slot="email-label" class="text-sm font-medium text-gray-700">דוא"ל</span>
          <span slot="password-label" class="text-sm font-medium text-gray-700">סיסמה</span>
          <span slot="username-label" class="text-sm font-medium text-gray-700">שם משתמש</span>
          <span slot="code-label" class="text-sm font-medium text-gray-700">קוד אימות</span>
          
          <!-- Buttons and links -->
          <span slot="forgot-password" class="text-sm text-blue-600 hover:text-blue-800">שכחת סיסמה?</span>
          <span slot="button-login" class="font-medium">התחבר</span>
          <span slot="button-signup" class="font-medium">הירשם</span>
          <span slot="button-reset" class="font-medium">אפס</span>
          <span slot="button-verify" class="font-medium">אמת</span>
          <span slot="button-loading" class="font-medium">טוען...</span>
          
          <!-- Toggle texts -->
          <span slot="toggle-login-text" class="text-gray-600">לא רשום?</span>
          <span slot="toggle-login-link" class="font-medium text-blue-600 hover:text-blue-800">הירשם</span>
          <span slot="toggle-signup-text" class="text-gray-600">כבר רשום?</span>
          <span slot="toggle-signup-link" class="font-medium text-blue-600 hover:text-blue-800">התחבר</span>
          
          <!-- Success messages -->
          <span slot="success-title" class="text-xl font-medium text-green-600">ההתחברות הצליחה!</span>
          <span slot="success-message" class="text-gray-700">אתה מחובר כעת.</span>
          
          <!-- Error and other messages -->
          <span slot="error-message" class="text-red-600">שגיאת אימות. אנא נסה שוב.</span>
          <span slot="ok-button" class="font-medium">אישור</span>
        </LoginForm>
      </div>
      
      <div class="text-center mt-8 text-sm text-gray-500">
        <p>© {new Date().getFullYear()} אתר ההדגמה. כל הזכויות שמורות.</p>
      </div>
    </div>
  </body>
</html>

<style>
  /* Custom styling to enhance the login form with Tailwind */
  .login-form-hebrew :global(input) {
    @apply border-gray-300 rounded-lg px-4 py-2 mb-4;
    @apply focus:border-blue-500 focus:ring-2 focus:ring-blue-200 focus:outline-none;
    @apply transition duration-150 ease-in-out;
  }
  
  .login-form-hebrew :global(button) {
    @apply bg-blue-600 text-white rounded-lg px-4 py-2 w-full;
    @apply hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2;
    @apply transition-colors duration-150 ease-in-out;
    @apply disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:bg-blue-600;
  }
  
  .login-form-hebrew :global(.form-container) {
    @apply p-6;
  }
  
  .login-form-hebrew :global(.field-label) {
    @apply mb-2;
  }
  
  .login-form-hebrew :global(#formTitle) {
    @apply text-center mb-6;
  }
  
  .login-form-hebrew :global(.error-container) {
    @apply bg-red-50 border border-red-200 rounded-lg p-4 mb-4;
  }
  
  .login-form-hebrew :global(#forgotPasswordLink) {
    @apply mb-4 text-right;
  }
  
  .login-form-hebrew :global(#toggleStateContainer) {
    @apply text-center mt-4;
  }
  
  .login-form-hebrew :global(.checkmark) {
    @apply mx-auto;
  }
  
  .login-form-hebrew :global(.success-title) {
    @apply text-xl font-medium text-green-600 mb-2;
  }
</style> 