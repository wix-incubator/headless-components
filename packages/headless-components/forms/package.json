{
  "name": "@wix/headless-forms",
  "version": "0.0.8",
  "type": "module",
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:watch": "tsc -p tsconfig.json --watch",
    "test": "vitest",
    "lint:fix": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "files": [
    "dist",
    "cjs",
    "react",
    "services"
  ],
  "exports": {
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js",
      "require": "./cjs/dist/react/index.js"
    },
    "./services": {
      "types": "./dist/services/index.d.ts",
      "import": "./dist/services/index.js",
      "require": "./cjs/dist/services/index.js"
    }
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.9.0",
    "@vitest/ui": "^3.1.4",
    "jsdom": "^26.1.0",
    "prettier": "^3.4.2",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "@wix/form-public": "^0.17.0",
    "@wix/forms": "^1.0.329",
    "@wix/headless-utils": "workspace:*",
    "@wix/services-definitions": "^0.1.4",
    "@wix/services-manager-react": "^0.1.26"
  }
}
