---
type Props = { size?: "sm" | undefined };
const { size } = Astro.props;
---

<div
  class:list={[
    "flex flex-none items-center justify-center border border-foreground/20 bg-background",
    size === "sm" ? "h-[30px] w-[30px] rounded-lg" : "h-[40px] w-[40px] rounded-xl",
  ]}
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class:list={[
      "text-foreground",
      size === "sm" ? "h-[10px] w-[10px]" : "h-[16px] w-[16px]",
    ]}
  >
    <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
    <path d="M2 17l10 5 10-5"></path>
    <path d="M2 12l10 5 10-5"></path>
  </svg>
</div>
