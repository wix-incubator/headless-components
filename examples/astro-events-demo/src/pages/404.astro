---
import BaseLayout from '@/layouts/BaseLayout.astro';

// Ensure proper 404 HTTP status code
Astro.response.status = 404;
---

<BaseLayout>
  <title>Page Not Found - 404</title>
  <meta
    name="description"
    content="The page you're looking for could not be found."
  />

  <div class="min-h-screen bg-background flex items-center justify-center">
    <div class="max-w-2xl mx-auto px-4 text-center">
      <h1 class="text-9xl font-bold text-foreground/20 mb-4">404</h1>
      <h2 class="text-4xl font-bold text-foreground">Page Not Found</h2>
    </div>
  </div>
</BaseLayout>
