{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      // TS: Mimick exported sdk from @wix/blog
      "@wix/blog/components": [
        "../../packages/headless-components/blog/react"
      ],
      "@wix/blog/services": [
        "../../packages/headless-components/blog/services"
      ],
    }
  }
}
